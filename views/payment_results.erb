<h1>
  Monthly payment results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @payment_APR.to_s(:percentage, precision: 4) %>
  </dd>

  <dt>
    Number of Years
  </dt>
  <dd>
    <%= @payment_Noy %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @payment_Principal.to_s(:currency) %>
  </dd>

  <dt>
    Monthly Payment
  </dt>
  <dd>
    <%= @monthlyPayment.to_s(:currency) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another monthly payment
</a>
